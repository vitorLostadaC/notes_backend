// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime
  Note      Note[]
}

model Note {
  id          String   @id
  title       String
  description String?
  createdAt   DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}
